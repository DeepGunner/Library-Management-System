doctype html
html
  head
    title Library
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css", integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r", crossorigin="anonymous")
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Library
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            if user
              li
                a(href='/articles/add') Add Article
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Logout
            else
              li
                a(href='/eLogin/') Employee Login
              li
                a(href='/uLogin/') User Login

    h1 User Register
    form(method='POST', action='/uLogin/uRegister')
      #form-group
        label Username:
        input.form-control(name='username', type='text')
      #form-group
        label First Name:
        input.form-control(name='firstname', type='text')
      #form-group
        label Last name:
        input.form-control(name='lastname', type='text')
      #form-group
        label Password:
        input.form-control(name='password', type='password')
      br
      input.btn.btn-primary(type='submit', value='Submit')
